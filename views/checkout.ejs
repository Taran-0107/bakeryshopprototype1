<!-- views/checkout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
  <h2>Checkout</h2>

  <% if (items.length > 0) { %>
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price (₹)</th>
          <th>Quantity</th>
          <th>Subtotal (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td>₹<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>₹<%= item.subtotal %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">Total:</th>
          <th>₹<%= total %></th>
        </tr>
      </tfoot>
    </table>

    <form action="/checkout" method="POST">
      <div class="mb-3">
        <label class="form-label">Choose Payment Method</label><br>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="paymentMethod" id="upi" value="UPI" checked>
          <label class="form-check-label" for="upi">UPI</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="paymentMethod" id="cash" value="Cash">
          <label class="form-check-label" for="cash">Cash</label>
        </div>
      </div>

      <button type="submit" class="btn btn-success">Place Order</button>
      <a href="/cart" class="btn btn-secondary ms-2">Back to Cart</a>
    </form>
  <% } else { %>
    <div class="alert alert-info mt-4">Your cart is empty.</div>
    <a href="/home" class="btn btn-primary">Continue Shopping</a>
  <% } %>
</div>

</body>
</html>
