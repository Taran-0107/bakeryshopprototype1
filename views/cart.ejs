<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .cart-container {
      background: white;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .empty-cart {
      text-align: center;
      font-size: 1.3rem;
      color: #777;
      padding: 40px 0;
    }
    .table th, .table td {
      vertical-align: middle;
      text-align: center;
    }
    form {
      display: inline;
    }
  </style>
</head>
<body>

<div class="container mt-5 cart-container">
  <h2 class="mb-4">üõí Your Cart</h2>

  <% if (items.length > 0) { %>
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Product</th>
          <th>Price (‚Çπ)</th>
          <th>Quantity</th>
          <th>Subtotal (‚Çπ)</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><strong><%= item.name %></strong></td>
            <td>‚Çπ<%= item.price %></td>
            <td>
              <div class="btn-group" role="group">
                <form action="/cart/update/<%= item.productId %>" method="POST">
                  <input type="hidden" name="action" value="decrease">
                  <button type="submit" class="btn btn-sm btn-outline-secondary">‚àí</button>
                </form>
                <button type="button" class="btn btn-sm btn-light" disabled><%= item.quantity %></button>
                <form action="/cart/update/<%= item.productId %>" method="POST">
                  <input type="hidden" name="action" value="increase">
                  <button type="submit" class="btn btn-sm btn-outline-primary">+</button>
                </form>
              </div>
            </td>
            <td>‚Çπ<%= item.subtotal %></td>
            <td>
              <form action="/cart/remove/<%= item.productId %>" method="POST">
                <button class="btn btn-sm btn-danger" title="Remove item">üóëÔ∏è</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-end">
      <h4 class="fw-bold">Total: ‚Çπ<%= total %></h4>
      <a href="/checkout" class="btn btn-success mt-3">Proceed to Checkout</a>
    </div>

  <% } else { %>
    <div class="empty-cart">
      <p>Your cart is empty! üòû</p>
      <a href="/home" class="btn btn-primary mt-3">Back to Shop</a>
    </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
